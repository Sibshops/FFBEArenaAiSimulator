#include <set>
#include <vector>
#include <string>
#include <memory>

#include "../stats/BattleStats.hpp"
#include "../stats/BattleResults.hpp"
#include "../ability/Ability.hpp"

#ifndef UNIT_HPP
#define UNIT_HPP

class Unit
{
public:

  static Unit CreateCecil();
  static Unit CreateCerius();
  static Unit CreateMedius();
  static Unit CreateLuneth();
  static Unit CreateCloudOfDarkness();
  static Unit CreateExdeath();
  static Unit CreateBartz();
  static Unit CreateSeven();
   
  BattleStats CalculateBattleStats() const;

  // Calculate average offensive damage. Assume 1 DEF.
  BattleResults CalculateBattleResults(const BattleStats bs);
  
  bool AddAbility(const Ability* ab);

  int HP;
  int MP;
  int ATK;
  int DEF;
  int MAG;
  int SPR;

  std::string m_Name;
  
  std::vector<const Ability*> Abilities;

  
};

#endif
