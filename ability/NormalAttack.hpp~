#include "../stats/BattleStats.hpp"
#include "Ability.hpp"

#ifndef NORMAL_ATTACK_HPP
#define NORMALATTACK_HPP

class NormalAttack : public Ability
{
public:
  
  bool IsOffensive() const override { return false; };
  bool IsSupport() const override { return false; };
  int CalculateDamage(const BattleStats bs) override {
    int damage = bs.ATK * bs.ATK * bs.m_PhysicalKiller;
    
    if (bs.m_BattleFlags.count(BattleFlags::DualWield))
      {
	damage *= 2.0;
      }
    
    return damage;
  };
};

#endif
