#include "../stats/BattleStats.hpp"
#include "Ability.hpp"

#ifndef AIM_HPP
#define AIM_HPP

class Aim : public Ability
{
public:
  
  bool IsOffensive() const override { return true; };
  bool IsSupport() const override { return false; };

  // Calculate average offensive damage. Assume 1 DEF.
  int CalculateDamage(const BattleStats bs) override
  {
    int damage = bs.ATK * bs.ATK * 1.2 * bs.m_PhysicalKiller;
    
    if (bs.m_BattleFlags.count(BattleFlags::DualWield))
      {
	damage *= 2;
      }

    return damage;
  };
};

typedef Aim PowerShot;

#endif
